<div class="row">
    <div class="col-md-6">
        <h3>Quadrant I</h3>
        @foreach (var t in Model.Where(x => x.Quadrant == 1))
        {
            <div>
                @t.TaskName
                <a asp-action="Edit" asp-route-id="@t.TaskId">Edit</a>
                <a asp-action="Delete" asp-route-id="@t.TaskId">Delete</a>
            </div>
        }
    </div>

    <div class="col-md-6">
        <h3>Quadrant II</h3>
        @foreach (var t in Model.Where(x => x.Quadrant == 2))
        {
            <div>
                @t.TaskName
            </div>
        }
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <h3>Quadrant III</h3>
        @foreach (var t in Model.Where(x => x.Quadrant == 3))
        {
            <div>@t.TaskName</div>
        }
    </div>

    <div class="col-md-6">
        <h3>Quadrant IV</h3>
        @foreach (var t in Model.Where(x => x.Quadrant == 4))
        {
            <div>@t.TaskName</div>
        }
    </div>
</div>