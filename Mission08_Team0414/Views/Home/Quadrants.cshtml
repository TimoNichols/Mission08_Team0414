<div class="container my-4">
    <h2 class="text-center mb-4">Task Quadrants</h2>

    <div class="row g-4">
        <!-- Quadrant I: Important / Urgent (Top‑Left) -->
        <div class="col-md-6">
            <div class="card h-100 border-danger">
                <div class="card-header bg-danger text-white">
                    <div class="fw-bold">Quadrant I</div>
                    <div class="small">Important / Urgent</div>
                </div>
                <div class="card-body">
                    @{
                        var q1 = Model.Where(x => x.Quadrant == 1);
                    }
                    @if (!q1.Any())
                    {
                        <p class="text-muted small mb-0">No tasks in this quadrant.</p>
                    }
                    else
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var t in q1)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0 border-0">
                                    <span>@t.TaskName</span>
                                    <span>
                                        <a asp-action="Edit" asp-route-id="@t.TaskId" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@t.TaskId" class="btn btn-sm btn-outline-danger">Delete</a>
                                    </span>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>

        <!-- Quadrant II: Important / Not Urgent (Top‑Right) -->
